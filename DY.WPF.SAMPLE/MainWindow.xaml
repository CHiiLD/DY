<mah:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:local="clr-namespace:DY.WPF;assembly=DY.WPF"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:port="clr-namespace:System.IO.Ports;assembly=System"
    x:Class="DY.WPF.SAMPLE.MainWindow"
    x:Name="this"
    Width="{Binding Source={x:Static local:WindowSize.Width}}"
    Height="{Binding Source={x:Static local:WindowSize.Height}}"
    Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="172*"/>
            <RowDefinition Height="565*"/>
        </Grid.RowDefinitions>
        <local:CommConnectionStatusDataGrid Grid.RowSpan="2"></local:CommConnectionStatusDataGrid>
    </Grid>
</mah:MetroWindow>