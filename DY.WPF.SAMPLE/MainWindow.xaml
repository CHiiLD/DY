<mah:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:local="clr-namespace:DY.WPF;assembly=DY.WPF"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:port="clr-namespace:System.IO.Ports;assembly=System"
    x:Class="DY.WPF.SAMPLE.MainWindow"
    x:Name="this"
    Width="{Binding Source={x:Static local:WindowSize.Width}}"
    Height="{Binding Source={x:Static local:WindowSize.Height}}"
    Title="MainWindow">
    <StackPanel>
        <Menu>
            <MenuItem Header="Item">
                <MenuItem Header="Open IO" Click="MenuItem_Click">

                </MenuItem>
            </MenuItem>
        </Menu>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!--<local:CommConnectionManage Grid.Column="0"/>
            <local:CommConnectionDataGrid Grid.Column="2"/>-->
            <local:CommIODataGrid Grid.Column="0"></local:CommIODataGrid>
            <local:CommIODataGrid Grid.Column="1"></local:CommIODataGrid>
        </Grid>
    </StackPanel>
</mah:MetroWindow>