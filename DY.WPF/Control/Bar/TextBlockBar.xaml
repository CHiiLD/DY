<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    x:Name="this"
	x:Class="DY.WPF.TextBlockBar">

    <Border x:Name="NBolder" Height="22" CornerRadius="7" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"  >
        <TextBlock x:Name="NTextBlock" 
                       Text="{Binding Path=Text, Mode=TwoWay, ElementName=this}"
                       HorizontalAlignment ="Center"
                       FontSize="14"
                       Foreground="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
    </Border>
</UserControl>