<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:DY.WPF"
	mc:Ignorable="d"
	x:Class="DY.WPF.ComboBoxWithBar"
	x:Name="this">

    <StackPanel Margin="0,3">
        <local:TextBlockBar x:Name="NTitle" Height="22" Text="{Binding Title, ElementName=this, Mode=TwoWay}"/>
        <ComboBox x:Name="NComboBox" ItemsSource="{Binding ItemSource, ElementName=this, Mode=TwoWay}" FontSize="14" Margin="2,4,2,0" />
    </StackPanel>
</UserControl>