<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="DY.WPF.CommDataGrid"
	x:Name="UserControl"
	d:DesignWidth="670" d:DesignHeight="356">

	<Grid x:Name="LayoutRoot">
		<DataGrid  ItemsSource="{Binding CommItem, ElementName=this, Mode=TwoWay}" AutoGenerateColumns="False" Height="356" VerticalAlignment="Top">

            <!--헤더 텍스트를 중앙에 위치-->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!--컬럼 정의-->
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="State" IsReadOnly="True">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Grid>
								<ContentPresenter Content="{Binding Image}"/>
							</Grid>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>

				<DataGridTextColumn Header="Target" IsReadOnly="True" Binding="{Binding Target}" Width="2*" />
				<DataGridTextColumn Header="Type" IsReadOnly="True" Binding="{Binding Type}" Width="*" />
				<DataGridTextColumn Header="Option"  IsReadOnly="True" Binding="{Binding Option}" Width="3*" />
				<DataGridTextColumn Header="Note" Binding="{Binding Note}" Width="3*" />
                
				<DataGridTemplateColumn Header="On/Off" IsReadOnly="True">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<Grid>
								<ContentPresenter Content="{Binding OnOffButton}"/>
							</Grid>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
                
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>