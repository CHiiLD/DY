<!--CommConnectDataGrid 컨트롤을 제어-->
<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
    xmlns:local="clr-namespace:DY.WPF"
	mc:Ignorable="d"
	x:Class="DY.WPF.CommConnectionManage"
	x:Name="UserControl">

    <StackPanel>
        <mah:ToggleSwitch x:Name="NBT_ConnectionCheckTimerSwtich" Header="Connection Check Timer" Margin="10,0" />
        <local:NumericUpDownWithBar
            x:Name="NTB_ConnectionCheckInteval" 
            Minimum="1000"
            Maximum="60000"
            StringFormat="{}{0:N0}ms"
            Title="Connection check inteval" Margin="0,2,0,0"/>

        <local:NumericUpDownWithBar
            x:Name="NTB_ConnectionDelayTime" 
            Minimum="100"
            Maximum="1000"
            StringFormat="{}{0:N0}ms"
            Title="Connection delay time" Margin="0,6,0,0"/>
    </StackPanel>
</UserControl>