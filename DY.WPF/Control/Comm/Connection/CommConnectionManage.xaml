<!--CommConnectDataGrid 컨트롤을 제어-->
<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
    xmlns:local="clr-namespace:DY.WPF"
	mc:Ignorable="d"
	x:Class="DY.WPF.CommConnectionManage"
	x:Name="UserControl">

    <StackPanel>
        <mah:ToggleSwitch x:Name="NBT_ReconnectSwtich" Header="Reconnect when non-response" Margin="10,0" />
        <local:TextBoxWithBar 
            x:Name="NTB_ReconnectInteval" 
            Text="" 
            IsNumberOnly="True"
            Title="Reconnect interval(ms)"/>
        <local:TextBoxWithBar 
            x:Name="NTB_RespLatencyTime" 
            Text="" 
            IsNumberOnly="True"
            Title="Respnse latency time(ms)"/>
    </StackPanel>
</UserControl>