<!--IO 입출력 표기를 위한 엑셀 데이타그리드-->
<UserControl x:Class="DY.WPF.CommIOExcelDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pt="clr-namespace:PropertyTools.Wpf;assembly=PropertyTools.Wpf"
             xmlns:local="clr-namespace:DY.WPF"
             mc:Ignorable="d" 
             x:Name="this" >
    <Grid>
        <pt:DataGrid x:Name="NDataGrid">
            <pt:DataGrid.ColumnDefinitions>
                <pt:ColumnDefinition x:Name="NCO_Type"  Header="Type" PropertyName="Type" Width="70"/>
                <pt:ColumnDefinition x:Name="NCO_Address" Header="Address" PropertyName="Address" Width="100"/>
                <pt:ColumnDefinition x:Name="NCO_Reade" Header="Read" IsReadOnly="True" PropertyName="Output" Width="100"/>
                <pt:ColumnDefinition x:Name="NCO_Write" Header="Write" PropertyName="Input" Width="100"/>
                <pt:ColumnDefinition x:Name="NCO_Comment" Header="Comment" PropertyName="Comment" Width="1*"/>
            </pt:DataGrid.ColumnDefinitions>
        </pt:DataGrid>
    </Grid>
</UserControl>