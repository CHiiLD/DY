<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
        xmlns:local="clr-namespace:DY.WPF"
        x:Class="DY.WPF.WINDOW.CommIOExcelWindow"
        x:Name="this"
        Title="PLC IO excel mode" 
        Width="400"
        Style="{DynamicResource DialogWindowStyle}"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/DY.WPF;component/STYLE/DialogWindowStyle.xaml" />
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
                <MenuItem Header="Save by csv"/>
                <MenuItem Header="Load by csv"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</mah:MetroWindow>
