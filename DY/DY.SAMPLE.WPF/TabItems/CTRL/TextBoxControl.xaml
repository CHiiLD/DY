<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    xmlns:local="clr-namespace:DY.SAMPLE.WPF.CTRL"
    xmlns:MahControls="http://metro.mahapps.com/winfx/xaml/controls"
	x:Class="DY.SAMPLE.WPF.CTRL.TextBlockCustomControl"
	d:DesignWidth="179.385" d:DesignHeight="43.466">
    <Border x:Name="NBorder" BorderBrush="{DynamicResource TextBrush}" BorderThickness="1" CornerRadius="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TextBlockCustomControl}}, Path=CornerRadius}" >
        <TextBlock x:Name="NText" 
                   Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TextBlockCustomControl}}, Path=Text}"
                   Style="{DynamicResource MetroTextBlock}" 
                   TextWrapping="Wrap" 
                   FontFamily="Segoe UI Light" 
                   TextAlignment="Center" 
                   VerticalAlignment="Center" />
    </Border>
</UserControl>