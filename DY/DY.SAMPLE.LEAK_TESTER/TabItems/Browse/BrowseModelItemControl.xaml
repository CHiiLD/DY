<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:DY.SAMPLE.LEAK_TESTER"
	mc:Ignorable="d"
	x:Class="DY.SAMPLE.LEAK_TESTER.BrowseModelItemControl"
	x:Name="UserControl"
	d:DesignWidth="1024" d:DesignHeight="768">

	<Grid >
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<DockPanel Margin="20,0,0,0" Grid.ColumnSpan="1" >
			<TextBlock Text="Date" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0" />
			<DatePicker SelectedDateFormat="Short" SelectedDate="3/23/09"
				DisplayDateStart="2010-01-01" DisplayDateEnd="12/31/09" 
				FirstDayOfWeek="Monday" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18.667"/>
			<Button Content="검색하기" Height="30" Width="80" HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="10,0,0,0" FontSize="13.333"/>
		</DockPanel>
		<local:ModelListViewItemControl Grid.Row="1" Grid.ColumnSpan="2"/>
		<Button Content="CSV로 저장하기" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0" Width="100" Height="30"/>
	</Grid>
</UserControl>