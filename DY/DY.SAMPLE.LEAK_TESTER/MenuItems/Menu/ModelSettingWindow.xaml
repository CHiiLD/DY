<Window x:Class="DY.SAMPLE.LEAK_TESTER.ModelSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="기종 관리 및 설정" Width="480" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" SizeToContent="Height">
    <Grid>
        <UniformGrid Margin="20,10" Rows="9">
            <DockPanel Height="36" VerticalAlignment="Center" Margin="0,1,0,4"  >
                <TextBlock  TextWrapping="Wrap" Text="기종 번호" Width="100" FontSize="16" VerticalAlignment="Center"/>
                <ComboBox x:Name="NModelNum" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" SelectionChanged="NModelNum_SelectionChanged" >
                </ComboBox>
            </DockPanel>
            <DockPanel Height="36" VerticalAlignment="Center"  Margin="0,1,0,4"   >
                <TextBlock  TextWrapping="Wrap" Text="기종" Width="100" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="NModel" BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" />
            </DockPanel>
            <DockPanel Height="36" VerticalAlignment="Center"  Margin="0,1,0,4"   >
                <TextBlock  TextWrapping="Wrap" Width="100" FontSize="16" VerticalAlignment="Center" Text="납품처" />
                <TextBox x:Name="NCustomer" BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" />
            </DockPanel>
            <DockPanel Height="36" VerticalAlignment="Center" Margin="0,1,0,4"   >
                <TextBlock  TextWrapping="Wrap" Text="제품 정보" Width="100" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="NProdectInfo" BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" />
            </DockPanel>
            <DockPanel Height="36" VerticalAlignment="Center" Margin="0,1,0,4"   >
                <TextBlock  TextWrapping="Wrap" Text="제품 번호" Width="100" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="NProductNum" BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" />
            </DockPanel>
            <DockPanel Height="36" VerticalAlignment="Center"  Margin="0,1,0,4"   >
                <TextBlock  TextWrapping="Wrap" Text="라벨 ID" Width="100" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="NLabelID"  BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" />
            </DockPanel>
            <DockPanel Height="36" VerticalAlignment="Center"  Margin="0,1,0,4"   >
                <TextBlock  TextWrapping="Wrap" Text="LH 시리얼 시작 번호" Width="100" FontSize="13.333" VerticalAlignment="Center"/>
                <TextBox  x:Name="NLHSerialNum" BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" />
            </DockPanel>
            <DockPanel Height="36" VerticalAlignment="Center"  Margin="0,1,0,4"   >
                <TextBlock  TextWrapping="Wrap" Text="RH 시리얼 시작 번호" Width="100" FontSize="13.333" VerticalAlignment="Center"/>
                <TextBox x:Name="NRHSerialNum" BorderBrush="Black" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontSize="18.667" BorderThickness="1" />
            </DockPanel>
            <UniformGrid Height="36" VerticalAlignment="Center" Margin="0,3,0,1" Columns="2"   >
                <Button x:Name="NOK" Content="저장" FontSize="16" Margin="10,0,20,0" Click="NOK_Click" />
				<Button x:Name="NCancel" Content="취소" FontSize="16" Margin="20,0,10,0" Click="NCancel_Click" />
            </UniformGrid>
        </UniformGrid>
    </Grid>
</Window>
