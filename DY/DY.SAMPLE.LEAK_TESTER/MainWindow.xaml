<Window x:Class="DY.SAMPLE.LEAK_TESTER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:DY.SAMPLE.LEAK_TESTER"
        Title="RAD LEAK TESTER for GRANTA" Height="768" Width="1024">
	<DockPanel>
		<Menu DockPanel.Dock="Top" VerticalAlignment="Top" >
			<MenuItem Header="메뉴" >
				<MenuItem x:Name="NMIModel" Header="기종 관리" Click="NMIModel_Click" />
				<MenuItem x:Name="NMISetup" Header="기종 설정" />
				<MenuItem x:Name="NMI_IO" Header="입출력 장치 테스트" />
				<MenuItem x:Name="NMI_Init" Header="시리얼포트 초기화" />
				<MenuItem x:Name="NMI_Exit" Header="프로그램 종료" />
			</MenuItem>
		</Menu>
		<TabControl >
			<TabItem Header="작업" >
				<Grid Background="#FFE5E5E5">
					<local:WorkItemControl DataContext="{Binding}"/>
				</Grid>
			</TabItem>

			<TabItem Header="브라우저" >
				<Grid Background="#FFE5E5E5">
					<local:BrowseModelItemControl DataContext="{Binding}"/>
				</Grid>
			</TabItem>

			<TabItem Header="기록" >
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>
	</DockPanel>
</Window>
